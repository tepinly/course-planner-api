datasource db {
  url      = env("DB_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model Lesson {
  id Int @id @default(autoincrement())
  user Int
  title String
  description String
  recurrence Recurrence[]
  updatedAt DateTime @default(now())
  createdAt DateTime @default(now())
}

model Recurrence {
  id Int @id @default(autoincrement())
  lesson Lesson @relation(fields: [lessonId], references: [id])
  lessonId Int
  start BigInt
  interval BigInt
  expire BigInt
}